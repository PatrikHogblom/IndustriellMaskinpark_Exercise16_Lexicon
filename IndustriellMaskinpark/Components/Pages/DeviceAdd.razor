@page "/deviceadd"

<h3 class="display-5 align-content-center">Add Devices</h3>

@if (!IsSaved)
{
	<EditForm Model="Device" OnSubmit="OnSumbit" Enhance FormName="AddDeviceForm">

		<div class="row mb-3">
            <label for="location" class="col-form-label col-md-3">Name: </label>
            <div class="col-md-8">
                <InputText id="devicename" class="form-control col-md-8" @bind-Value="@Device.DeviceName" placeholder="Enter Name"></InputText>
            </div>
            <label for="location" class="col-form-label col-md-3">Location: </label>
            <div class="col-md-8">
                <InputText id="location" class="form-control col-md-8" @bind-Value="@Device.Location" placeholder="Enter location"></InputText>
            </div>
            <label for="type" class="col-form-label col-md-3">Type: </label>
            <div class="col-md-8">
                <InputText id="type" class="form-control col-md-8" @bind-Value="@Device.Type" placeholder="Enter type of sensor"></InputText>
            </div>
            <label for="status" class="col-form-label col-md-3">Status: </label>
            <div >
                <InputCheckbox id="status" @bind-Value="@Device.Status">Enter the status of sensor</InputCheckbox>
            </div>
        </div>

        <div>
            <button type="submit" class="btn btn-outline-primary ms-1">Submit</button>
        </div>

	</EditForm>
}
else
{
    <h4 class="text-success">@Message</h4>
}